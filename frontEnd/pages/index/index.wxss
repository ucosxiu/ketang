/*nav*/
.nav{
 flex-wrap:wrap;
 justify-content:center;
}
.nav-item{
  margin: 30rpx 50rpx 10rpx;
  width:80rpx;
}
.nav-item image{
  width:80rpx;
  height: 80rpx;
}
.nav-item text{
  width:80rpx;
  font-size: 16rpx;
  color:#000;
  display: inline-block;
  text-align: center;
}

.page.home .weui-title {
    padding: 20px;
	font-size: 28rpx;
	line-height: 28rpx;
}
.weui-cell__ft{
	position: relative;
	padding-right: 20px;
	font-size: 24rpx;
	vertical-align: middle;
}
.weui-cell__ft::after{
	content: " ";
    display: inline-block;
    height: 8px;
    width: 8px;
    border-width: 2px 2px 0 0;
    border-color: #B2B2B2;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -5px;
    right: 0;
}

.weui-grids {
    padding: 0px;
    border: 0px;
}

.weui-grid {
    width: 50%;
    background-color: #fff;
    border: 0px;
    margin-bottom: 0px;
    padding: 10rpx;
}

.weui-grid__icon {
    width: auto;
    height: 230rpx;
    overflow: hidden;
    border-radius: 5px;
}


/**videoList**/
.videoList {
    padding: 0 20rpx 10rpx 20rpx;
}

.videoItem {
    float: left;
    width: 345rpx;
    margin-right: 20rpx;
}

.videoItem.nrt {
    margin-right: 0;
}

.videoItem.mt10 {
    margin-top: 10rpx;
}

.videoItem .logo {
    width: 100%;
    height: 260rpx;
    overflow: hidden;
    position: relative;
}

.videoItem .logo .v {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 260rpx;
    text-align: center;
    background-color: rgba(0,0,0,0.4);
}

.videoItem .logo .v image {
    width: 48px;
    height: 48px;
    margin-top: 85rpx;
}

.videoItem .logo image {
    width: 100%;
    height: 100%;
}

.videoItem .name {
    font-size: 28rpx;
    margin-top: 5px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.videoItem .info {
    margin-top: 5px;
    display: flex;
}

.videoItem .price {
    font-size: 28rpx;
    display: block;
    width: 50%;
	color: red;
}
